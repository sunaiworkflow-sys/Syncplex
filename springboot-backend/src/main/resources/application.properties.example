# JD-Resume Matching Engine - Spring Boot Configuration
# Copy this file to application.properties and fill in your values

# Server Configuration
server.port=3000

# File Upload Configuration
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=50MB

# OpenAI Configuration
openai.api-key=YOUR_OPENAI_API_KEY_HERE
openai.model=gpt-4o-mini

# Python Ranking Service Configuration
ranking.service.url=http://localhost:5001

# Uploads directory
uploads.dir=${java.io.tmpdir}/jdres-uploads
